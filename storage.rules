rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // -----------------------------------------------------------------
    // プロフィール画像保存パス (/profiles/{userId}/...) のセキュリティ
    // -----------------------------------------------------------------
    match /profiles/{userId}/{allPaths=**} {
      // 認証されていないユーザーからのアクセスをすべて拒否
      allow read, write: if request.auth == null;
      
      // 認証済みユーザーで、かつリクエストされたパスの{userId}と
      // 認証ユーザーのUIDが一致する場合にのみ、読み書きを許可
      allow read, write: if request.auth.uid == userId;
    }
    
    // -----------------------------------------------------------------
    // 他のすべてのストレージパスへのアクセスを拒否
    // -----------------------------------------------------------------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}